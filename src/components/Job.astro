---
import Skill from "./Skill.astro";

interface Props {
    title: string;
    company: string;
    from: Date;
    to: Date;
}

const { title, company, from, to } = Astro.props;
---

<div class="group transition-all py-4 group">
    <div class="flex flex-row py-2 break-inside-avoid">
        <div class="flex flex-col items-baseline w-1/3">
            <h4 class="text-lg text-accent-600">{title}</h4>
            <div class="-mt-2">
                <span class="text-gray-400 text-sm font-thin mx-3"
                    >{company}</span
                >
                <span
                    class="text-gray-400 text-xs font-thin flex-grow text-right"
                >
                    {
                        from.toLocaleDateString(undefined, {
                            month: "short",
                            year: "numeric",
                        })
                    } -
                    {
                        to.toLocaleDateString(undefined, {
                            month: "short",
                            year: "numeric",
                        })
                    }
                </span>
            </div>
        </div>
        <div
            class="flex flex-col ml-4 text-xs my-auto w-2/3 text-gray-100 group-hover:text-gray-400 print:text-gray-400 transition-colors duration-500"
        >
            <div class="flex flex-row flex-wrap shrink gap-2">
                <slot name="worked-with" />
            </div>
        </div>
    </div>
    <ul class="list-disc text-sm ml-4">
        <slot />
    </ul>
</div>
