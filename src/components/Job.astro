---
import Skill from "./Skill.astro";

interface Props {
    title: string;
    company: string;
    from: Date;
    to?: Date;
}

const { title, company, from, to } = Astro.props;
---

<div class="group transition-all py-4 group transition-colors">
    <div class="flex flex-col sm:flex-row py-2 break-inside-avoid">
        <div
            class="flex flex-row sm:flex-col items-baseline sm:w-1/3 py-2 sm:py-0"
        >
            <h4 class="text-lg text-accent-600 text-nowrap flex-1">
                {title}
            </h4>
            <div class="flex items-baseline mx-auto">
                <span
                    class="text-gray-400 md:text-gray-200 group-hover:text-gray-400 print:text-gray-400 duration-500 text-sm font-thin mx-3"
                    >{company}</span
                >
                <span
                    class="text-gray-400 md:text-gray-200 group-hover:text-gray-400 print:text-gray-400 duration-500 text-xs font-thin text-right"
                >
                    {
                        from.toLocaleDateString(undefined, {
                            month: "short",
                            year: "numeric",
                        })
                    } -
                    {
                        to &&
                            to.toLocaleDateString(undefined, {
                                month: "short",
                                year: "numeric",
                            })
                    }
                    {!to && "Present"}
                </span>
            </div>
        </div>
        <div
            class="flex sm:flex-col ml-4 text-xs my-auto sm:w-2/3 text-gray-400 md:text-gray-200 group-hover:text-gray-400 print:text-gray-400 duration-500"
        >
            <div
                class="flex flex-row flex-wrap shrink gap-2 -ml-4 sm:justify-center"
            >
                <slot name="worked-with" />
            </div>
        </div>
    </div>
    <ul class="list-disc text-sm ml-4">
        <slot />
    </ul>
</div>
