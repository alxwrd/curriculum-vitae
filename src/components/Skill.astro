---
import { Icon } from "astro-icon/components";

interface Props {
  icon?: string;
  examples?: string;
  padding?: boolean;
}

const {
  icon = "fa-solid:align-justify",
  examples = "",
  padding = false,
} = Astro.props;
---

<div>
  <Icon
    name={icon}
    class:list={["inline", "w-4", padding ? "mx-2" : "mx-0.5"]}
  /><span><slot /></span>
  {examples && <span class="text-[.6rem]">({examples})</span>}
</div>
